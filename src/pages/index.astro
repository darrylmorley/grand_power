---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
---

<BaseLayout pageTitle="Grand Power UK | High Quality Firearms">
  <div class="h-[100vh] bg-[url('/images/home_gp_bg.jpg')] bg-slate-600 bg-blend-overlay">
    <Header />
    <div class="grid h-[calc(100vh-25%)] place-items-center">
      <img src="/images/home_white_logo_grandpower_uk.png" width="50%" alt="" />
      <p class="text-white text-xl mx-96 text-center">Grand Power produce high quality firearms using the latest in machining technology from their workshop in Slovakia</p>
      <a href="/products" class="bg-bronze hover:bg-white text-white hover:text-bronze px-8 py-4 uppercase rounded font-semibold">Shop Now</a>
    </div>
  </div>
  <div class="h-[100vh]"></div>
</BaseLayout>
